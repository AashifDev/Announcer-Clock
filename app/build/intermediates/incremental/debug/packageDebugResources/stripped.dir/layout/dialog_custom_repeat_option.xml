<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/themeCard"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_25sdp"
    app:cardCornerRadius="@dimen/_16sdp"
    app:strokeWidth="0dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="vertical"
        android:background="@drawable/bg_dialog_round"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/custom_timer"
            android:textSize="@dimen/_16ssp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <NumberPicker
                        android:id="@+id/etInterval"
                        android:layout_width="match_parent"
                        android:theme="@style/NumberPickerTheme"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_14sdp"
                        android:inputType="number"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/interval_minute"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="normal"
                        android:id="@+id/txtIntervalMinute"
                        android:layout_gravity="center_horizontal"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_margin="@dimen/_16sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <NumberPicker
                        android:layout_margin="@dimen/_14sdp"
                        android:id="@+id/etTotal"
                        android:theme="@style/NumberPickerTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total_minute"
                        android:textSize="@dimen/_13ssp"
                        android:id="@+id/txtTotalMinute"
                        android:textStyle="normal"
                        android:layout_gravity="center_horizontal"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_weight="1"
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/blue"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:padding="@dimen/_8sdp"
            android:text="APPLY"
            android:textSize="@dimen/_16ssp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>



</com.google.android.material.card.MaterialCardView>

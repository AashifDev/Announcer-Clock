<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ON state -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <padding
                android:bottom="@dimen/_6sdp"
                android:top="@dimen/_6sdp" />
            <stroke android:width="@dimen/_3sdp"
                android:color="@color/dark_grey"/>
            <corners android:radius="@dimen/_100sdp" /> <!-- Rounded corners -->
            <solid android:color="#03A9F4"/> <!-- Blue when ON -->
        </shape>
    </item>

    <!-- OFF state -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/_3sdp"
                android:color="@color/dark_grey"/>
            <corners android:radius="@dimen/_100sdp" /> <!-- Rounded corners -->
            <solid android:color="@color/grey"/> <!-- Gray when OFF -->
        </shape>
    </item>

</selector>



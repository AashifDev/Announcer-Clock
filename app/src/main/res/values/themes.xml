<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AnnouncerClock" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- Primary colors -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/blue</item>
        <item name="colorPrimaryContainer">@color/grey</item>
        <item name="colorOnPrimaryContainer">@color/dark_grey</item>

        <!-- Surface & Background -->
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/white</item>

    </style>

    <style name="Theme.AnnouncerClock" parent="Base.Theme.AnnouncerClock" />

    <style name="iOSSwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <!-- Customize thumb and track drawables -->
        <item name="android:thumb">@drawable/toggle_thumb</item>
        <item name="track">@drawable/toggle_track</item>
    </style>

    <style name="NumberPickerTheme" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="colorControlNormal">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textColorHighlight">@color/blue</item>

    </style>

    <!--Bottom Sheet Style-->
    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="SheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <!--<item name="android:windowCloseOnTouchOutside">false</item>-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

</resources>